{
  "schemaVersion": 1,

  "id": "splatcraft",
  "version": "${version}",
  "license": "MIT",

  "name": "Splatcraft",
  "icon": "assets/splatcraft/icon.png",
  "description": "A Minecraft Splatoon Mod!",

  "authors": [
    "andante."
  ],

  "contact": {
    "homepage": "https://splatcraft.net",
    "sources": "https://github.com/splatcraft/splatcraft-fabric",
    "issues": "https://github.com/splatcraft/splatcraft-fabric/issues"
  },

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.splatcraft.Splatcraft"
    ],
    "client": [
      "net.splatcraft.client.SplatcraftClient"
    ],

    "modmenu": [
      "net.splatcraft.client.SplatcraftModMenu"
    ],
    "cardinal-components-entity": [
      "net.splatcraft.SplatcraftCardinalComponents"
    ]
  },
  "mixins": [
    "splatcraft.mixins.json",
    "datagen.mixins.json"
  ],
  "accessWidener": "splatcraft.accesswidener",

  "depends": {
    "java": ">=17",
    "minecraft": ">=1.18",
    "fabricloader": ">=0.12",

    "fabric": ">=0.45",
    "cardinal-components-base": ">=4.0",
    "cloth-config": ">=6.1"
  },
  "suggests": {
    "modmenu": "*",
    "sodium": "*"
  },

  "custom": {
    "cardinal-components": [
      "splatcraft:player_data"
    ],

    "modmenu": {
      "badges": [],
      "links": {
        "mod.splatcraft.contact.discord": "https://discord.splatcraft.net"
      }
    }
  }
}
