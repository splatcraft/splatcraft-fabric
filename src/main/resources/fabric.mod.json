{
  "schemaVersion": 1,

  "id": "splatcraft",
  "version": "${version}",

  "name": "Splatcraft",
  "icon": "assets/splatcraft/icon.png",
  "description": "A Minecraft mod based on Nintendoâ€™s popular game Splatoon. This mod aims to add items and mechanics based on the game in a cohesive way, such as weapons, squid transformation, Turf War and other features!",

  "license": [
    "MIT (Code)",
    "All Rights Reserved (Assets)"
  ],
  "authors": [
    "Daniel Orr (Andante)",
    "Gaetano Russo (Ninni)"
  ],
  "contributors": [ "",
    "Cibernet (Former Author)"
  ],

  "contact": {
    "homepage": "https://splatcraft.net",
    "sources": "https://github.com/splatcraft/splatcraft-fabric",
    "issues": "https://github.com/splatcraft/splatcraft-fabric/issues"
  },

  "environment": "*",
  "entrypoints": {
    "main":   [ "net.splatcraft.Splatcraft" ],
    "client": [ "net.splatcraft.client.SplatcraftClient" ],

    "modmenu":  [ "net.splatcraft.client.SplatcraftModMenu" ],
    "toymaker": [ "net.splatcraft.datagen.SplatcraftToymaker" ],

    "cardinal-components-entity": [ "net.splatcraft.component.SplatcraftCardinalComponents" ]
  },

  "mixins": [ "splatcraft.mixins.json" ],
  "accessWidener": "splatcraft.accesswidener",

  "depends": {
    "java": ">=17",
    "minecraft": ">=1.18",
    "fabricloader": ">=0.13",
    "fabric": ">=0.46",
    "frame": ">=0.9.2",
    "cardinal-components-base": ">=4.0"
  },
  "suggests": {
    "modmenu": "*",
    "sodium": "*",
    "trinkets": "*"
  },

  "custom": {
    "cardinal-components": [ "splatcraft:player_data" ],
    "modmenu": { "links": { "mod.splatcraft.contact.discord": "https://discord.splatcraft.net" } }
  }
}
