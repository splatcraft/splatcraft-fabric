{
  "schemaVersion": 1,

  "id": "splatcraft",
  "version": "${version}",

  "name": "Splatcraft",
  "icon": "assets/splatcraft/icon.png",
  "description": "A Minecraft Splatoon Mod!",

  "license": [
    "MIT (Code)",
    "All Rights Reserved (Assets)"
  ],
  "authors": [
    "Daniel Orr (Andante)",
    "Gaetano Russo (Ninni)"
  ],
  "contributors": [ "",
    "Cibernet (Former Author)"
  ],

  "contact": {
    "homepage": "https://splatcraft.net",
    "sources": "https://github.com/splatcraft/splatcraft-fabric",
    "issues": "https://github.com/splatcraft/splatcraft-fabric/issues"
  },

  "environment": "*",
  "entrypoints": {
    "main":   [ "net.splatcraft.Splatcraft" ],
    "client": [ "net.splatcraft.client.SplatcraftClient" ],

    "modmenu":  [ "net.splatcraft.client.SplatcraftModMenu" ],
    "toymaker": [ "net.splatcraft.datagen.SplatcraftToymaker" ],

    "cardinal-components-entity": [ "net.splatcraft.cca.SplatcraftCardinalComponents" ]
  },

  "mixins": [
    "splatcraft.mixins.json",
    "datagen.mixins.json"
  ],
  "accessWidener": "splatcraft.accesswidener",

  "depends": {
    "java": ">=17",
    "minecraft": ">=1.18",
    "fabricloader": ">=0.12",
    "fabric": ">=0.46",
    "frame": ">=0.4.5",
    "toymaker": ">=1.2",
    "cardinal-components-base": ">=4.0",
    "cloth-config": ">=6.1"
  },
  "suggests": {
    "modmenu": "*",
    "sodium": "*"
  },

  "custom": {
    "cardinal-components": [ "splatcraft:player_data" ],
    "modmenu": { "links": { "mod.splatcraft.contact.discord": "https://discord.splatcraft.net" } }
  }
}
